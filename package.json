{
  "name": "zain-pos-v3",
  "version": "1.0.0",
  "description": "Zain Gents Palace - Point of Sale System",
  "main": "dist-electron/main.js",
  "author": "Zain Gents Palace",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "npm run build",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "postinstall": "prisma generate",
    "import": "ts-node scripts/import-from-excel.ts",
    "test-sync": "ts-node scripts/test-sync.ts",
    "reset-cloud": "ts-node scripts/reset-cloud.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^5.9.1",
    "axios": "^1.13.5",
    "bcryptjs": "^2.4.3",
    "csv-parser": "^3.2.0",
    "date-fns": "^3.3.1",
    "jsbarcode": "^3.12.3",
    "jspdf": "^2.5.2",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.323.0",
    "mssql": "^12.2.0",
    "node-thermal-printer": "^4.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "recharts": "^2.15.4",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.35",
    "prisma": "^5.9.1",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "build": {
    "appId": "com.zaingentspalace.pos",
    "productName": "ZAIN GENTS PALACE POS",
    "asar": false,
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "prisma/pos.db",
        "to": "pos.db"
      },
      {
        "from": "prisma/generated",
        "to": "prisma-client"
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "prisma/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "asarUnpack": [
        "node_modules/.prisma",
        "node_modules/@prisma/engines"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "shortcutName": "ZAIN GENTS PALACE POS"
    }
  }
}